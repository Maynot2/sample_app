<div class="row">
  <div class="col-md-1">
    <%= gravatar_for @user %>
  </div>
  <aside class="col-md-4">
    <ul>
      <li>Name: <%= @user.name%></li>
      <li>Email: <%= @user.email%></li>
      <li>Created on the: <%= @user.created_at %></li>
      <li>Last updated: <%= @user.updated_at %></li>
      <li>Current time: <%= Time.now %></li>
    </ul>
  </aside>
</div>
